{
  "compilerOptions": {
    "outDir": "build",
    "declaration": true,
    "declarationMap": true,
    "sourceMap": true,
    "target": "ES2015",
    "lib": ["ES2015"],
    "module": "CommonJS",
    "strict": true,
    "strictNullChecks": true,
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "skipLibCheck": true
